{
  "name": "react-ts-starter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx,js --report-unused-disable-directives --max-warnings 0",
    "prettier": "prettier --check \"{src,tests}/**/*.{ts,tsx,js,jsx,json,md,css}\" --config .prettierrc",
    "prettier:fix": "prettier --write \"{src,tests}/**/*.{ts,tsx,js,jsx,json,md,css}\" --config .prettierrc",
    "test": "vitest run --reporter verbose",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "test-ct": "playwright test -c playwright-ct.config.ts"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-currency-input-field": "^3.7.0",
    "react-dom": "^18.2.0",
    "styled-components": "^6.1.8",
    "zustand": "^4.5.1"
  },
  "devDependencies": {
    "@playwright/experimental-ct-react": "^1.41.2",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.3.0",
    "@vitest/ui": "^1.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "jsdom": "^24.0.0",
    "prettier": "^3.2.5",
    "typescript": "^5.2.2",
    "vite": "^5.1.0",
    "vite-plugin-svgr": "^4.2.0",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^1.3.0"
  }
}
